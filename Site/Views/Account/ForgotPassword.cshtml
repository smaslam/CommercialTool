@model Site.Models.ForgotPassword

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forgot Password</h2>
@using (@Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    <div>
        <table>

            <tr>
                <td>Email Id:</td>
                <td>@Html.TextBoxFor(Model => Model.EmailID)
                    @Html.ValidationMessageFor(Model => Model.EmailID)
                </td>
            </tr>
            <tr>
                <td>
                    @if (@ViewBag.Check == "1")
                    {
                        <span style="color:red">Mail could not send sucessfully.</span>
                    }
                    @if (@ViewBag.Check == "2")
                    {
                        <span style="color:green">Mail send sucessfully.</span>
                    }
                    @if (@ViewBag.Check == "3")
                    {
                        <span style="color:red">Email id does not exist.</span>
                    }
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>

    </div>
}
